<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#64c1eb"
    tools:context="com.example.dev.wizhouse.ActivateActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblActivatePage"
        android:text="Activate"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBackButton"
        android:background="@drawable/ic_undo_black_24dp"
        android:layout_alignParentRight="true"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="דלתות"
        android:id="@+id/btnSwitchDoors"
        android:layout_marginBottom="66dp"
        android:layout_above="@+id/btnSwitchLivingRoom"
        android:layout_alignRight="@+id/btnSwitchLivingRoom"
        android:layout_alignEnd="@+id/btnSwitchLivingRoom" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תאורת סלון"
        android:id="@+id/btnSwitchLivingRoom"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnSwitchKitchen"
        android:layout_alignEnd="@+id/btnSwitchKitchen" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תאורת מטבח"
        android:id="@+id/btnSwitchKitchen"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/btnSwitchRoom"
        android:layout_alignRight="@+id/btnSwitchRoom"
        android:layout_alignEnd="@+id/btnSwitchRoom" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תאורת חדר"
        android:id="@+id/btnSwitchRoom"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
